<div class="overview page" id='overview'>
    <div class="title-bar">
        <div class="title">
            Overview
        </div>
        <div class="coverage title">
            Test Coverage: <span class='critical'><%= @panel_view.project_coverage %></span>
        </div>
    </div>
    <div class="panel">
        <div class="up">
            <div class="left ">
                <div class="a-board board">
                    <div class="titles">
                        <div class="title">
                            <%= @panel_view.a_board.title %>
                        </div>
                        <div class="subtitle">
                            <%= @panel_view.a_board.subtitle %>
                        </div>
                    </div>
                    <div class="informations">
                        <% @panel_view.a_board.elements[:critical_info].each do |info| %>
                        <div class="info">
                            <span class='critical'> <%= info[:number] %> </span> <%= info[:unit] %>
                        </div>
                        <% end %>
                    </div>
                    <div class="elements">
                        <% @panel_view.a_board.elements[:elements].each do |element| %>
                            <%= element.to_element %>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="mid ">
                <div class="b-board board">
                    <div class="titles">
                        <div class="title">
                            <%= @panel_view.b_board.title %>
                        </div>
                        <div class="subtitle">
                            <%= @panel_view.b_board.subtitle %>
                        </div>
                    </div>
                    <div class="elements">
                        <% @panel_view.b_board.elements.each do |element| %>
                            <%= element.to_element %>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="right ">
                <div class="c-board board">
                    <div class="titles ">
                        <div class="title">
                            <%= @panel_view.c_board.title %>
                        </div>
                        <div class="subtitle">
                            <%= @panel_view.c_board.subtitle %>
                        </div>
                    </div>
                    <div class="informations ">
                        <% @panel_view.c_board.elements[:critical_info].each do |info| %>
                        <div class="info">
                            <span class='critical'> <%= info[:number] %> </span> <%= info[:unit] %>
                        </div>
                        <% end %>
                    </div>
                    <div class="elements ">
                        <% @panel_view.c_board.elements[:elements].each do |element| %>
                            <div class="element">
                                <div class="bar-title"> <%= element.title %> </div>
                            <%= element.to_element %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div class="bottom">
            <div class="d-board board">
                <div class="titles ">
                        <div class="title">
                            <%= @panel_view.d_board.title %>
                        </div>
                        <div class="subtitle">
                            <%= @panel_view.d_board.subtitle %>
                        </div>
                </div>
                <div class="tools">
                    <div class="double-slider" data-days="<%=@panel_view.days_count%>" data-first="<%=@panel_view.first_date%>" data-last="<%=@panel_view.last_date%>">
                        <div class="label">
                           <span class="title"> Date: </span> <span id="start"></span> ~ <span id="end"></span>
                        </div>
                        <div id="slider-range">
                        </div>
                    </div>
                    <div class="selector">
                        <div class="label title">Time Unit:</div>
                        <select class="custom-select custom-select-lg mb-3" id="unit_selector">
                            <option value="day">Day</option>
                            <option value="week">Week</option>
                            <option value="month">Month</option>
                        </select>
                    </div>
                </div>
                <div class="elements ">
                    <% @panel_view.d_board.elements.each do |element| %>
                        <div class="element">
                            <%= element.to_element %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
