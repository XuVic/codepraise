<div class="quality page" id="quality">
    <div class="title-bar">
        <div class="title">
            Quality
        </div>
        <div class="tools">
            <button class="btn btn-dark" id="switch">Quality Problem Distribution</button>
        </div>
    </div>
    <div class="panel">
        <div class="top ">
            <div class="right">
                <div class="a-board board ">
                    <div class="titles ">
                        <div class="title">
                            <%= @panel_view.a_board.title %>
                        </div>
                        <div class="subtitle">
                            <%= @panel_view.a_board.subtitle %>
                        </div>
                    </div>
                    <div class="elements ">
                    <% @panel_view.a_board.elements.each do |element| %>
                        <div class="element">
                            <div class="bar-title"> <%= element.title %> </div>
                            <%= element.to_element %>
                        </div>
                    <% end %>
                    </div>
                </div>
            </div>
            <div class="left">
                <div class="b-board board ">
                    <div class="titles ">
                        <div class="title">
                            <%= @panel_view.b_board.title %>
                        </div>
                        <div class="subtitle">
                            <%= @panel_view.b_board.subtitle %>
                        </div>
                    </div>
                    <div class="elements ">
                        <% @panel_view.b_board.elements.each do |element| %>
                            <div class="element">
                                <%= element.to_element %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div class="bottom ">
            <div class="c-board board ">
                <div class="titles ">
                        <div class="title">
                            <%= @panel_view.c_board.title %>
                        </div>
                        <div class="subtitle">
                            <%= @panel_view.c_board.subtitle %>
                        </div>
                </div>
                <div class="elements ">
                    <% @panel_view.c_board.elements.each do |element| %>
                        <div class="element">
                            <%= element.to_element %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
    <div class="panel_2">
        <div class="d-board board">
            <div class="titles ">
                <div class="title">
                    <%= @panel_view.d_board.title %>
                </div>
                <div class="subtitle">
                    <%= @panel_view.d_board.subtitle %>
                </div>
            </div>
            <div class="tools">
                <div class="selector">
                    <div class="title">
                        Problem Type
                    </div>
                    <select class="custom-select" id="type">
                        <option value="complexity_method">
                            has complexity method
                        </option>
                        <option value="offenses">
                            has code style offense
                        </option>
                        <option value="documentation">
                            without documentation
                        </option>
                        <option value="low_coverage">
                            low test coverage
                        </option>
                    </select>
                </div>
                <div class="selector">
                    <div class="title">
                        Contributors
                    </div>
                    <select class="custom-select" id="contributor">
                    <option value="total">Total</option>
                    <% @panel_view.contributors.each do |c| %>
                    <option value="<%=c.email_id%>"><%= c.email_id %></option>
                    <% end %>
                    </select>
                </div>
            </div>
            <div class="elements ">
                <% @panel_view.d_board.elements.each do |element| %>
                <div class="element">
                <%= element.to_element %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
