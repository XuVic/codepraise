<% if @processing.in_progress? %>
    <%= partial('shares/progress_bar')  %>
<% else %>
    <div class="side-bar">
        <div class="logo">
            <span>
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/2f/Logo_TV_2015.svg/1200px-Logo_TV_2015.svg.png" alt="logo">
                 <a href="/"> CodePraise </a>
            </span>
        </div>
        <div class="folders">
                <div class="project_name">
                    <a href=""><%= @panel_view.project_name %></a>
                </div>
                <ul class="folder-tree">
                    <%= @panel_view.folder_tree %>
                </ul>
        </div>
    </div>
    <div class="main" data-owner="<%= @panel_view.owner_name %>" data-project="<%= @panel_view.project_name %>" data-category="<%= @panel_view.type %>">
        <div class="bar">
            <div class="panel-name">
                Individual Contribution
            </div>
        </div>
        <div class="panel">
            <div class="tab">
                <div class="category">
                    <div> <a href="" class="selected"> Productivity </a> </div>
                    <div>  <a href=""> Quality </a>  </div>
                    <div> <a href=""> Responsiblity </a> </div>
                    <div> <a href=""> Functionality </a> </div>
                </div>
            </div>
            <%= partial("panels/#{@panel_view.type}") %>
        </div>
    </div>
<% end %>